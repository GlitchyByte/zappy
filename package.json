{
  "name": "@glitchybyte/zappy",
  "version": "2.0.0",
  "description": "Lightweight library for compressing and encoding web-related text (json, URLs, UUIDs, etc.) into a URL-safe format for efficient transport.",
  "license": "Apache-2.0",
  "author": "GlitchyByte",
  "keywords": [
    "json",
    "text",
    "compression",
    "base64",
    "url-safe"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/GlitchyByte/zappy.git"
  },
  "type": "module",
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "vite build",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:profile": "TEST_PROFILE=true vitest run profile",
    "bench": "vitest bench --run"
  },
  "dependencies": {
    "@glitchybyte/dash": "^1.1.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^24.0.3",
    "@vitest/coverage-v8": "^3.2.4",
    "fs-extra": "^11.3.0",
    "typescript": "^5.8.3",
    "vite": "^7.0.0",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^3.2.4"
  }
}
